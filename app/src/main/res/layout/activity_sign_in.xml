<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.koitim.estudosunifor.activitie.SignInActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/signin_et_nome"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/signin_et_nome"
        android:layout_alignStart="@+id/signin_et_nome"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/signin_et_username"
        android:hint="Login" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/signin_et_username"
        android:layout_alignStart="@+id/signin_et_username"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/signin_et_senha"
        android:hint="Senha"
        android:inputType="textPassword" />

    <Button
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_et_senha"
        android:layout_alignStart="@+id/signin_et_senha"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/signin_bt_salvar" />
</RelativeLayout>
